
<% if @current_user  %>
  <div class="row">
    <div class="col-sm-9">
      <h1>Oh the Places You've Been</h1>
    </div>
    <div class="col-sm-3 text-end">
      <a href="/places/new/" class="btn btn-success">New Place</a>
    </div>
  </div>

  <ul>
    <% for place in @places.where({user_id: session[:user_id]}) %>
      <li><a href="/places/<%= place.id %>"><%= place.name %></a></li>
    <% end %>
  </ul>
<% else %>
   You must first <a href="/sessions/new">login</a> to post.
<% end %> 